  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Jest",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["${file}"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:8081",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
